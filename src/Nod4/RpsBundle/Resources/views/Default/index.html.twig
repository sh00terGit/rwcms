{% extends 'RpsBundle::layout.html.twig' %}
{% block entity_content %}
    <!-- Carousel
          ================================================== -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">     

            {%set i= 0 %}
            {%for news in newsArray%}
                {% if i==0 %}
                    <div class="item active">
                    {%else%}
                        <div class="item ">
                        {%endif%}
                        {% set i = i + 1 %}



                        <img src="{{news.getFirstImage}}" style="margin: 0;">
                        <div class="carousel-caption">
                            <p>{{news.dateUpdate | date('d-m-Y')}}</p><h2 class="text-primary"> &nbsp{{news.fname}} </h2>
                            <p>{{news.getShortText()}}</p>
                            <p> <a href="{{path('content_view' , {'id': news.id})}}"  class="btn btn-sm btn-primary" role="button">&nbsp;&nbsp;Подробнее....</a></p>
                        </div>

                    </div>
{% endfor %}
                </div>
                <a class="left carousel-control" href="#myCarousel" data-slide="prev"><span class="glyphicon glyphicon-chevron-left"></span></a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
            </div><!-- /.carousel -->







            <!-- Marketing messaging and featurettes
            ================================================== -->
            <!-- Wrap the rest of the page in another container to center all the content. -->

            <div class="container marketing">

                <!-- Three columns of text below the carousel -->
                <div class="row">
                    {%for news in newsArray%}
                        <div class="col-lg-4">

                            <img class="img-rounded " src="{{news.getFirstImage}}" style="width: 15em; height: 15em;">
                            <p>{{news.dateUpdate | date('d-m-Y')}}</p><h4> {{news.fname}}</h4>
                            <p>{{news.getShortText()}}</p>
                            <p><a class="btn btn-default" href="{{path('content_view' , {'id': news.id})}}" role="button">Читать подробности</a></p>

                        </div><!-- /.col-lg-4 -->


                    {% endfor %}
                </div><!-- /.row -->

                
                <!-- START THE FEATURETTES -->
        
                <hr class="featurette-divider">
                <div  style="margin-bottom: 60px;"><h3 class="text-center text-primary featurette-heading">Наша работа</h3></div>
        
                <div class="row">
                    <div class="col-md-7">
                        <h5 class="featurette-heading"> Оздоровление</h5>
                        <p class="lead">
                            В течение 2015 года в соответствии с условиями Коллективного договора РУП «Гомельское отделение Белорусской железной дороги, в плане содействия администрации, профсоюзными работниками и профактивом Гомельского Райпрофсожа была проведена большая организационная работа по оздоровлению работников предприятий и их детей.
        
                        </p>
                    </div>
                    <div class="col-md-5">
                        <img class="featurette-image img-responsive" src="{{ asset('bundles/rps/images/children.jpg') }}">
                    </div>
                </div>

                <hr class="featurette-divider">
        
                <div class="row ">
                    <div class="col-md-5">
                        <img class="featurette-image img-responsive" src="{{ asset('bundles/rps/images/sport.jpg') }}">
                    </div>
                    <div class="col-md-7">
                        <h5 class="featurette-heading">Спартакиады</h5>
                        <p class="lead">Проведение различных массовых спортивных соревнованих, по многим видам спорта.</p>
                    </div>
                </div>
                    
                    
                {% endblock %}