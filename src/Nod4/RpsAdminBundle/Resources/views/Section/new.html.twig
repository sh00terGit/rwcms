{% extends 'RpsAdminBundle::layout.html.twig' %} 
{% block javascripts %}

    {{ parent() }}   
    {% javascripts
                    '@RpsAdminBundle/Resources/public/js/sectionChoise.js'
                    '@RpsAdminBundle/Resources/public/js/ajaxContentByCategory.js'
    %}
