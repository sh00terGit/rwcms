        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="bg-success h3">
                {{ flashMessage }}
            </div>
        {% endfor %} 
         {{ form_start(form, {  'method': 'POST', 'attr': {'id': 'form'} }) }}

        {{ form_errors(form) }}

        {{ form_rest(form) }}
